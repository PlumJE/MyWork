<LoginWindow>
    id: loginWin
    cols: 2
    size_hint: 1, 0.2
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.75
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "Nickname :"
        width: 100
        color: "black"
    TextInput:
        id: nickname1
    Label:
        text: "Password :"
        width: 100
        color: "black"
    TextInput:
        id: password1
    Button:
        id: loginbtn
        text: "Login!"
        on_release: root.login()
    Button:
        text: "Register"
        on_release: root.showRegWin()

<RegisterWindow>
    id: regWin
    cols: 2
    size_hint: 1, 0.3
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.75
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "Input nickname:"
        width: 100
        color: "black"
    TextInput:
        id: nickname2
    Label:
        text: "Input mail address:"
        width: 100
        color: "black"
    TextInput:
        id: mailaddr
    Label:
        text: "Input password:"
        width: 100
        color: "black"
    TextInput:
        id: password2
    Label:
        text: "Input password again:"
        width: 100
        color: "black"
    TextInput:
        id: pswdagain
    Button:
        text: "To login window"
        on_release: root.showLoginWin()
    Button:
        text: "Register!"
        on_release: root.register()

<LoginScreen>
    Image:
        id: loginbg
        fit_mode: "fill"
        source: root.bg_path
        on_touch_up: root.openLoginWin()
    AnchorLayout:
        id: loginlayout
        anchor_x: 'center'
        anchor_y: 'center'